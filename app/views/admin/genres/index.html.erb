<div class="container">
  <div class="row">
    <h4>ジャンル一覧・追加</h4>
  </div>
  
  <div class="row justify-content-center mt-5">
   <div class="col-5">
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
     <table class="table table-borderless">
      <tr>
       <th>ジャンル名</th>
       <td><%= f.text_field :equipment_genre %></td>
       <td><%= f.submit '新規登録', class: "btn-primary btn-sm" %></td>
      </tr>
     </table>
    <% end %>
   </div>
 </div>

   <div class="row justify-content-center">
    <div class="col-5">
     <table class="table table-borderless">
      <thead>
      <tr class="text-center">
       <th>ジャンル</th>
      </tr>
    </thead>
      <% @genres.each do |genre| %>
      <tr class="text-center">
       <td><%= genre.equipment_genre %></td>
       <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm mx-auto" %></td>
      </tr>
      <% end %>
    </table>
    <div class="d-flex justify-content-center align-items-center">
      <%= paginate @genres %>
    </div>
    </div>
   </div>
  </div>
</div>