<div class='container'>
  <div class="offset-2 col-6">
    <h1>管理者ログイン</h1>
    <div>
      <%= form_with model: @admin, url:admin_session_path, local: true do |f| %>
         <div class="form-row">
          <div class="form-group col-6"><%= f.label :メールアドレス %></div>
          <div class="form-group col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40x10" %></div>
        </div>
        
        <div class="form-row">
          <div class="form-group col-6"><%= f.label :パスワード %></div>
          <div class="form-group col-6"><%= f.password_field :password, autocomplete: "current-password", size: "40x10" %></div>
        </div>
                
        <div class="actions">
          <%= f.submit "Log in",class: 'btn btn-sm btn-primary'%>
        </div>
      <% end %>
    </div>
  </div>
</div>