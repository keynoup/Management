<div class='container'>
  <div class='row '>
    <h4>会員一覧</h4>
  </div>

  <div class="row justify-content-center mt-5">
    <div class="col-8">
      <table class="table table-hover table-bordered">
        <thead>
          <tr class="text-center">
            <th>会員ID</th>
            <th>氏名</th>
            <th>社員番号</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr class="text-center">
            <td><%= user.id %></td>
            <td><%= link_to admin_user_path(user.id) ,class: 'text-dark' do %>
            <%= user.last_name + " " + user.first_name %>
            <% end %>
            </td>
            <td><%= user.employee_number %></td>
            <td><%= user.email %></td>
            <td><% if user.is_deleted == true %>
            <div class= "text-secondary">無効</div>
            <% else %>
            <div class= "text-success">有効</div>
            <% end %>
            </td>
          </tr>
        <% end %>
        <%= paginate @users %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center align-items-center">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>