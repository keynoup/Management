<div class="container">
  <div class="row">
    <h4>TOPページ</h4>
  </div>
  

  <div class="row mt-5" >
    <div class="col-2">
      <%= render 'admin/genres/genresearch',genres: @genres %>
    </div>
    
    <div class="col-9 offset-1">
      <div class="row justify-content-between">
        <div class="col-6 ">
          <div class="d-flex align-items-end">
            <h4>
              <%= @genre.present? ? @genre.equipment_genre + "一覧" : "備品一覧" %>
            </h4>
            <h5>(全<%= @genre_count.present? ? @genre_count : @equipment_count %>件)</h5>
          </div>
        </div>
        <div class="col-2">
          <%= link_to '申請履歴一覧', user_applications_path,class: 'btn btn-sm btn-primary' %>
        </div>
      </div>
      
      <div class="row mt-5">
        <% @equipments.each do |equipment| %>
          <div class='col-4'>
            <%= link_to equipment_path(equipment.id) do %>
              <%= image_tag equipment.image, size: "200x160" %>
            <% end %>
            <p><%= equipment.equipment_name %></p>
            <p><%= equipment.equipment_status_i18n %></p>
          </div>
        <% end %>
        <%= paginate @equipments %>
      </div>
    </div>
  </div>
</div>