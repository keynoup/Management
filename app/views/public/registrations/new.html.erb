<div class='container'>
  <div class="offset-2 col-10">
    <h2 class="title">新規会員登録</h2>

    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>

      <table>
        <tr>
          <th class="label">名前</th></br>
            <td>
              <div class="field">
                <%= f.text_field :last_name, autofocus: true, size: "40x10", placeholder: '姓' %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.text_field :first_name, size: "40x10", placeholder: '名' %>
              </div>
            </td>
        </tr>
        <tr>
          <th class="label">フリガナ</th>
            <td>
              <div class="field">
                <%= f.text_field :last_name_kana, size: "40x10", placeholder: 'セイ' %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.text_field :first_name_kana, size: "40x10", placeholder: 'メイ' %>
              </div>
            </td>
        </tr>

        <tr>
          <th class="label">所属</th>
            <td>
              <div class="field">
                <%= f.text_field :affiliation, size: "40x10" %>
              </div>
            </td>
        </tr>

        <tr>
          <th class="label">社員番号</th>
            <td>
              <div class="field">
                <%= f.text_field :employee_number, size: "40x10" %>
              </div>
            </td>
        </tr>

        <tr>
          <th class="label">電話番号</th>
            <td>
              <div class="field">
                <%= f.text_field :phone_number, size: "40x10" %>
              </div>
            </td>
        </tr>

        <tr>
          <th class="label">メールアドレス</th>
            <td>
              <div class="field">
                <%= f.email_field :email, size: "40x10", class: "email" %>
              </div>
            </td>
        </tr>

        <tr>
          <th class="label">パスワード（6文字以上）</th>
          　<td>
              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
                <% end %><br />
                <%= f.text_field :password, autocomplete: "off", size: "40x10", class: "password" %>
                <!--password_field→text_field変更-->
              </div>
            </td>
        </tr>

        <th class="label">パスワード（確認用）</th>
          <td>
            <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.text_field :password_confirmation, autocomplete: "off", size: "40x10", class: "password_confirm" %>
            </div>
          </td>
        </tr>
      </table>

      <div class="actions">
        <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success' %>
      </div>
    <% end %>

    <h2 class="title">既に登録済みの方</h2>
    <p><%= link_to 'こちら', new_user_session_path %> からログインしてください</p>
  </div>
</div>