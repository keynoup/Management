<div class="container">
  <div class-"row">
    <h4>使用一覧</h4>
  </div>

  <div class="row justify-content-center mt-5">
    <table class="table table-bordered" style="width: 600px;">
      <thead>
        <tr>
          <th>申請日</th>
          <th>使用目的</th>
          <th class="text-center">ステータス</th>
          <th class="text-center">返却入力</th>
        </tr>
      </thead>
      <% @user_applications.each do |user_application| %>
      <tbody>
        <tr>
          <td><%= user_application.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= user_application.objective %></td>
          <td class="text-center"><%= user_application.application_status_i18n %></td>
          <td class="text-center"><%= link_to "入力画面に進む", user_application_path(user_application.id), class: "btn-warning btn-sm mx-auto" %></td>
      </tbody>
      <% end %>
      <%= paginate @user_applications %>
    </table>
  </div>
</div>