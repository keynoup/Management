<div class="container">
  <div class="row">
    <h4>会員情報編集</h4>
  </div>

   <div class="row mt-5 offset-1">
    <div class="col-8 mx-auto">
    <%= form_with model: current_user ,url:user_path, method: :patch, local: true do |f| %>
      <div class="form-group d-flex">
        <%= f.label :"氏名", class: "col-4 col-form-label" %>
        <%= f.text_field :last_name, class: "col-4 form-control", autofocus: true %>
        <%= f.text_field :first_name, class: "col-4 offset-1 form-control" %>
      </div>

      <div class="form-group d-flex">
        <%= f.label :"フリガナ", class: "col-md-4 col-form-label" %>
        <%= f.text_field :last_name_kana, class: "col-sm-4 form-control" %>
        <%= f.text_field :first_name_kana, class: "col-sm-4 offset-1 form-control"  %>
      </div>

      <div class="form-group d-flex">
        <%= f.label :"所属", class: "col-md-4 col-form-label" %>
        <%= f.text_field :affiliation, class: "col-sm-4 form-control" %>
      </div>

      <div class="form-group d-flex">
        <%= f.label :"社員番号", class: "col-md-4 col-form-label" %>
        <%= f.text_field :employee_number, class: "col-sm-4 form-control" %>
      </div>

      <div class="form-group d-flex">
        <%= f.label :"電話番号", class: "col-md-4 col-form-label" %>
        <%= f.text_field :phone_number, class: "col-sm-4 form-control" %>
      </div>

      <div class="form-group d-flex">
        <%= f.label :"メールアドレス", class: "col-md-4 col-form-label" %>
        <%= f.text_field :email, class: "col-sm-4 form-control" %>
      </div>

      <div class="form-group ml-3">
        <%= f.submit "変更を保存",class:"btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>